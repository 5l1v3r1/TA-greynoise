{
    "meta": {
        "version": "1.0.0", 
        "restRoot": "TA_greynoise", 
        "name": "TA-greynoise", 
        "displayName": "Greynoise.io Add on For Splunk", 
        "apiVersion": "3.0.0"
    }, 
    "pages": {
        "configuration": {
            "tabs": [
                {
                    "table": {
                        "header": [
                            {
                                "field": "name", 
                                "label": "Account name"
                            }, 
                            {
                                "field": "username", 
                                "label": "Username"
                            }
                        ], 
                        "actions": [
                            "edit", 
                            "delete", 
                            "clone"
                        ]
                    }, 
                    "name": "account", 
                    "entity": [
                        {
                            "required": true, 
                            "type": "text", 
                            "label": "Account name", 
                            "field": "name", 
                            "help": "Enter a unique name for this account.", 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of Account name should be between 1 and 50", 
                                    "type": "string", 
                                    "maxLength": 50
                                }, 
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "errorMsg": "Account name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "type": "regex"
                                }
                            ]
                        }, 
                        {
                            "required": true, 
                            "type": "text", 
                            "label": "Username", 
                            "field": "username", 
                            "help": "Enter the username for this account.", 
                            "options": {
                                "placeholder": "Enter the username here"
                            }, 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of username should be between 1 and 200", 
                                    "type": "string", 
                                    "maxLength": 200
                                }
                            ]
                        }, 
                        {
                            "encrypted": true, 
                            "required": true, 
                            "type": "text", 
                            "label": "Password", 
                            "field": "password", 
                            "help": "Enter the password for this account.", 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of password should be between 1 and 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ]
                        }
                    ], 
                    "title": "Account"
                }, 
                {
                    "options": {
                        "saveValidator": "function(formData) { if(!formData.proxy_enabled || formData.proxy_enabled === '0') {return true; } if(!formData.proxy_url) { return 'Proxy Host can not be empty'; } if(!formData.proxy_port) { return 'Proxy Port can not be empty'; } return true; }"
                    }, 
                    "name": "proxy", 
                    "entity": [
                        {
                            "field": "proxy_enabled", 
                            "type": "checkbox", 
                            "label": "Enable"
                        }, 
                        {
                            "field": "proxy_type", 
                            "defaultValue": "http", 
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "label": "http", 
                                        "value": "http"
                                    }, 
                                    {
                                        "label": "socks4", 
                                        "value": "socks4"
                                    }, 
                                    {
                                        "label": "socks5", 
                                        "value": "socks5"
                                    }
                                ], 
                                "disableSearch": true
                            }, 
                            "type": "singleSelect", 
                            "label": "Proxy Type"
                        }, 
                        {
                            "field": "proxy_url", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max host length is 4096", 
                                    "type": "string", 
                                    "maxLength": 4096
                                }
                            ], 
                            "type": "text", 
                            "label": "Host"
                        }, 
                        {
                            "field": "proxy_port", 
                            "validators": [
                                {
                                    "range": [
                                        1, 
                                        65535
                                    ], 
                                    "type": "number"
                                }
                            ], 
                            "type": "text", 
                            "label": "Port"
                        }, 
                        {
                            "field": "proxy_username", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of username is 50", 
                                    "type": "string", 
                                    "maxLength": 50
                                }
                            ], 
                            "type": "text", 
                            "label": "Username"
                        }, 
                        {
                            "field": "proxy_password", 
                            "encrypted": true, 
                            "type": "text", 
                            "label": "Password", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of password is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ]
                        }, 
                        {
                            "field": "proxy_rdns", 
                            "type": "checkbox", 
                            "label": "Remote DNS resolution"
                        }
                    ], 
                    "title": "Proxy"
                }, 
                {
                    "name": "additional_parameters", 
                    "entity": [
                        {
                            "required": false, 
                            "type": "text", 
                            "label": "API Key", 
                            "field": "api_key", 
                            "defaultValue": "", 
                            "help": "Enter an API Key for more than 500 results per query", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ]
                        }, 
                        {
                            "required": true, 
                            "type": "text", 
                            "label": "index", 
                            "field": "index", 
                            "defaultValue": "main", 
                            "help": "Enter index name for storing data into.", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ]
                        }
                    ], 
                    "title": "Add-on Settings"
                }
            ], 
            "description": "Set up your add-on", 
            "title": "Configuration"
        }
    }
}